# 设置循环变量
# 设置Mod键，1-Alt;2-win
set $mod Mod1
# 设置方向键
set $up k
set $down j
set $left h
set $right l

# 设置屏幕锁定
bindsym $mod+F12 exec i3lock-fancy

#设置窗口边框等等
new_window none
new_float normal
hide_edge_borders both

# use window title, but no border
#使用窗口标题，但不使用边框
bindsym $mod+t border normal 0
# use no window title and a thick border
#不使用窗口标题和粗边框
bindsym $mod+y border pixel 3
# use neither window title nor border
#既不使用窗口标题也不使用边框
bindsym $mod+u border none

#设置窗口间距
gaps inner 6
gaps outer 4

# 设置截图快捷键 ,先安装mate-utils, sudo pacman -S mate-utils
bindsym $mod+p  exec  mate-screenshot -i

# 登陆时启动polybar
exec --no-startup-id  ~/.config/polybar/launch.sh

# 登录时启动fcitx
exec --no-startup-id fcitx

# 登陆时启动mpd
exec --no-startup-id mpd ~/.config/mpd/mpd.conf

# 登录时 启用窗口透明
exec --no-startup-id compton -b

# 登陆时 随机选择壁纸 ，~/Pictures/DesktopBackground 下要放几张图片
#exec --no-startup-id feh --randomize --bg-fill ~/Pictures/DesktopBackground 
# 登录时选择壁纸
exec --no-startup-id feh --randomize --bg-center ~/Pictures/58d3341f0cfe9.jpg


